%script#login(type="text/ng-template")
  .row
    .login-container
        %alert(close="closeFlash()" ng-show="error.length > 0" type="danger") {{error}}
      .login-form.floating-form
        .public-title Habit
        .public-tagline Login to your account
        .form-group
          %a.btn.btn-block.login-social.btn-facebook.text-center(href='/users/auth/facebook')
            %i.fa.fa-facebook
            Facebook
        .form-group
          %a.btn.btn-block.login-social.btn-twitter(href='/users/auth/twitter')
            %i.fa.fa-twitter
            Twitter
        %h5.text-center OR
        %form(ng-submit="login()")
          .form-group(ng-class="error.length > 0 ? 'has-error' : ''")
            %input#identification.form-control(ng-model="user.email" placeholder="Email")/
          .form-group(ng-class="error.length > 0 ? 'has-error' : ''")
            %input#password.form-control(ng-model="user.password" placeholder="Password" type="password")/
          %button.btn.btn-primary.pull-right(type="submit") Login
          %a.secondary-action(ui-sref="signup") Create Account
          %a.forgot-password.forgot-password-link(ui-sref="forgot-password") Forgot Password
